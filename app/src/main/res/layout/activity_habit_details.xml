<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ–¼ Habit Icon -->
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/lady1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="Habit Icon"
            android:scaleType="centerCrop" />

        <!-- ðŸ’  Card for Habit Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_bg"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habit Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/detailGoalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Goal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

            <EditText
                android:id="@+id/detailGoalInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter goal"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_bg"
                android:textColor="@color/textPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detailCurrentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Progress"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/detailCurrentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter current value"
                android:inputType="number"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_bg"
                android:textColor="@color/textPrimary"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- âœ… Update Button -->
        <Button
            android:id="@+id/updateHabitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Habit"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ”» Horizontal Row for Delete + Back -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="20dp">

            <!-- ðŸ—‘ Delete Button -->
            <Button
                android:id="@+id/deleteHabitBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Delete Habit"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:layout_marginEnd="8dp" />

            <!-- ðŸ”™ Back Button -->
            <Button
                android:id="@+id/backBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Back"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:paddingVertical="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
