<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    tools:context=".AddMoodActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="How Do You Feel\nToday?"
        android:textAlignment="center"
        android:textColor="#1A1A2E"
        android:textSize="32sp"
        android:textStyle="bold"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Center Image -->
    <ImageView
        android:id="@+id/ladyImage"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Mood illustration"
        android:src="@drawable/lady2"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mood Selection Container -->
    <LinearLayout
        android:id="@+id/moodSelectionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ladyImage"
        app:layout_constraintBottom_toTopOf="@id/btnSubmitMood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Unhappy Mood -->
        <LinearLayout
            android:id="@+id/moodUnhappy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:layout_width="49dp"
                android:layout_height="49dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mood_button_background"
                    android:backgroundTint="@color/colorPrimary" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Unhappy mood"
                    android:src="@drawable/ic_mood_unhappy" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Unhappy"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Sad Mood -->
        <LinearLayout
            android:id="@+id/moodSad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:layout_width="49dp"
                android:layout_height="49dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mood_button_background"
                    android:backgroundTint="@color/colorPrimary" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Sad mood"
                    android:src="@drawable/ic_mood_sad" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sad"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Normal Mood -->
        <LinearLayout
            android:id="@+id/moodNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:layout_width="49dp"
                android:layout_height="49dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mood_button_background"
                    android:backgroundTint="@color/colorPrimary" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Normal mood"
                    android:src="@drawable/ic_mood_normal" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Normal"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Good Mood -->
        <LinearLayout
            android:id="@+id/moodGood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:layout_width="49dp"
                android:layout_height="49dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mood_button_background"
                    android:backgroundTint="@color/colorPrimary" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Good mood"
                    android:src="@drawable/ic_mood_good" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Good"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Happy Mood -->
        <LinearLayout
            android:id="@+id/moodHappy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <FrameLayout
                android:layout_width="49dp"
                android:layout_height="49dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mood_button_background"
                    android:backgroundTint="@color/colorPrimary" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Happy mood"
                    android:src="@drawable/ic_mood_happy" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Happy"
                android:textColor="#666666"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitMood"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/background"
        android:text="Note Mood"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="32dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moodSelectionContainer" />

    <TextView
        android:id="@+id/backText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Back to mood"
        android:textColor="#1A1A2E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_back_small"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmitMood" />


</androidx.constraintlayout.widget.ConstraintLayout>
