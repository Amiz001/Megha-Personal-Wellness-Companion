<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ–¼ Top Image -->
        <ImageView
            android:id="@+id/topImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/lady1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="Habit Icon"
            android:scaleType="centerCrop" />

        <!-- ðŸŒ€ Card for inputs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_bg"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Habit Type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

            <Spinner
                android:id="@+id/habitTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/goalInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Daily Goal"
                android:inputType="number"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_bg"
                android:textColor="@color/textPrimary"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/saveHabitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Habit"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="20dp" />


    </LinearLayout>
</ScrollView>
